### Lighttpd Configuration File

#-- Lighttpd modules
server.modules = (
				"mod_access",
				"mod_accesslog",
				"mod_alias",
				"mod_auth",
				"mod_expire",
				"mod_evhost",
				#"mod_fastcgi",
				"mod_status",
)

#-- Mimetypes
